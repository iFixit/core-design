{
  "name": "@core-design/components",
  "version": "2.0.4",
  "description": "Core Design System Components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/core/components.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Dozuki/core-components.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm-run-all clean build-stencil",
    "build-netlify": "npm-run-all build-stencil-docs build-storybook",
    "build-stencil": "stencil build --no-cache",
    "build-stencil-docs": "stencil build --docs --no-cache",
    "build-storybook": "build-storybook --static-dir dist --output-dir storybook/ --quiet",
    "clean": "rm -rf dist",
    "generate": "stencil generate",
    "lint": "eslint src/**/*{.ts,.tsx}",
    "start": "stencil build --dev --watch --serve",
    "start-storybook": "start-storybook --static-dir dist --quiet",
    "stencil": "stencil build --watch",
    "storybook": "npm-run-all --parallel start-storybook stencil",
    "test": "stencil test --spec --e2e",
    "test-watch": "stencil test --spec --e2e --watchAll"
  },
  "devDependencies": {
    "@core-ds/icons": "^1.2.0",
    "@core-ds/primitives": "^1.0.0",
    "@stencil/core": "1.13.0",
    "@stencil/eslint-plugin": "^0.3.1",
    "@stencil/less": "^1.0.0",
    "@stencil/react-output-target": "^0.0.6",
    "@storybook/addon-a11y": "^5.3.18",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-centered": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-viewport": "^5.3.18",
    "@storybook/html": "^5.3.19",
    "@storybook/theming": "^5.3.18",
    "@storybook/web-components": "^5.3.19",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-loader": "^8.1.0",
    "eslint": "^7.1.0",
    "eslint-plugin-react": "^7.20.0",
    "less-plugin-autoprefix": "^2.0.0",
    "lit-html": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^7.0.4"
  },
  "license": "MIT"
}
