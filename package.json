{
  "name": "@core-design/components",
  "version": "1.0.3",
  "description": "Core Design System Components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/core/components.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Dozuki/core-components.git"
  },
  "scripts": {
    "build": "stencil build --docs",
    "build.storybook": "build-storybook -c .storybook -s www -o storybook/",
    "start": "stencil build --dev --watch --serve",
    "stencil": "node --max_old_space_size=4096 ./node_modules/.bin/stencil build --watch --recursive --serve --no-open --config ./stencil.config.ts",
    "storybook.run": "start-storybook -p 4444 -s www",
    "storybook": "npm-run-all --parallel stencil storybook.run",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "devDependencies": {
    "@core-ds/icons": "^1.2.0",
    "@core-ds/primitives": "^1.0.0",
    "@stencil/core": "1.13.0",
    "@stencil/less": "^1.0.0",
    "@storybook/addon-a11y": "^5.3.18",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-centered": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-viewport": "^5.3.18",
    "@storybook/html": "^5.3.18",
    "@storybook/theming": "^5.3.18",
    "@storybook/web-components": "^5.3.18",
    "babel-loader": "^8.1.0",
    "less-plugin-autoprefix": "^2.0.0",
    "lit-html": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^7.0.4"
  },
  "license": "MIT",
  "dependencies": {}
}
